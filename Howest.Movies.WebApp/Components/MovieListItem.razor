
<MudStack Row="true" @onclick="OnClick">
    <MudImage Src="@Movie.Poster" Width="64" ObjectFit="ObjectFit.Contain"></MudImage>
    <MudText Typo="Typo.h6">@Movie.Title</MudText>
</MudStack>

@code {
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    
    [Parameter] public MovieResult Movie { get; set; } = null!;
    
    private void OnClick()
    {
        NavigationManager.NavigateTo($"/movie/{Movie.Id}");
    }
}