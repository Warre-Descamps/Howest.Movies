@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudInputControl>
            <MudInput  T="string" AdornmentIcon="@Icons.Material.Filled.Search" Adornment="Adornment.Start" @bind-Value="Query" Margin="Margin.Dense" Variant="Variant.Outlined" Placeholder="Search"
                       Style="background: #adb5bd; color: black; border-radius: .5em;"></MudInput>
        </MudInputControl>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Login" Color="Color.Inherit"/>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            <CascadingValue Value="@Query">
                @Body
            </CascadingValue>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    public string Query { get; set; } = string.Empty;
}